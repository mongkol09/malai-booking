{
  "name": "malai-resort-api",
  "version": "1.0.0",
  "description": "Malai Resort Hotel Management System API - Secure Backend with TypeScript",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "start:prod": "NODE_ENV=production node dist/app.js",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/utils/seed.ts",
    "db:backup": "node scripts/backup-database.js",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "NODE_ENV=production jest",
    "health:check": "node scripts/health-check.js",
    "health:check:detailed": "node scripts/health-check.js --detailed",
    "health:check:continuous": "node scripts/health-check.js --continuous",
    "health:check:production": "node scripts/health-check.js --url https://api.malai-resort.com --detailed",
    "logs:view": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/err.log",
    "logs:clear": "rm -rf logs/*",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop malai-resort-api",
    "pm2:restart": "pm2 restart malai-resort-api",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs malai-resort-api",
    "pm2:monit": "pm2 monit",
    "production:build": "./build-production.sh",
    "production:deploy": "npm run build && npm run pm2:start"
  },
  "keywords": [
    "malai",
    "resort",
    "hotel",
    "booking",
    "api",
    "typescript",
    "express",
    "prisma",
    "postgresql",
    "thailand",
    "khaoyai"
  ],
  "author": "Malai Resort Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mongkol09/malai-admin.git"
  },
  "homepage": "https://malai-resort.com",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-telegram-bot-api": "^0.64.10",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^2.0.3",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mailersend": "^2.6.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "omise": "^1.0.0",
    "qrcode": "^1.5.4",
    "resend": "^6.0.2",
    "socket.io": "^4.8.1",
    "telegraf": "^4.16.3",
    "undici": "^6.21.3",
    "uuid": "^11.1.0",
    "winston": "^3.13.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.15",
    "@types/nodemailer": "^6.4.19",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.9.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prisma": "^5.19.1",
    "ts-jest": "^29.2.4",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
