# Railway Environment Template
# Copy this to .env in Railway dashboard

# Database
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-here
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-super-secure-session-secret-here

# API Configuration
NODE_ENV=production
API_VERSION=v1
PORT=3001

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-admin-domain.com

# Email Configuration (MailerSend)
MAILERSEND_API_KEY=your-mailersend-api-key
MAILERSEND_FROM_EMAIL=noreply@yourdomain.com
MAILERSEND_FROM_NAME=Your Hotel Name

# Email Configuration (Resend - Alternative)
RESEND_API_KEY=your-resend-api-key

# External API Keys
OMISE_PUBLIC_KEY=your-omise-public-key
OMISE_SECRET_KEY=your-omise-secret-key

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Security
ADMIN_API_KEY=your-super-secure-admin-api-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Features
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_TELEGRAM_NOTIFICATIONS=true
ENABLE_WEBSOCKET=true
ENABLE_ANALYTICS=true